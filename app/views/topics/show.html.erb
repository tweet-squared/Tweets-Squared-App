<div>
  <div>
    <div id="instructions">
      <p>
        Select the tweet you think came from the account below
      </p>
    </div>
    <div id="topic-specific-score">
    <h4>Score <%=session[:score] || 0%>/<%=session[:times] || 0%></h4>
    </div>
    <div id="twitter-user">
      <%=@real.twitter_handle.twitter_handle%>
    </div>
    <div class="row">
      <% tweets = [@real,@fake].shuffle %>
      <div class="col s12 m6">
        <a href="/verify/<%=tweets[0].id%>">
          <div class="card hoverable">
            <% if tweets[0].media_url %>
              <div class="card-image">
                <img id="left-tweet-img" src="<%=tweets[0].media_url%>">
              </div>
            <% end %>
            <div class="card-content">
            <p id="left-tweet">
              <%=tweets[0].content%>
            </p>
          </div>
          </div>
        </a>
      </div>
      <div class="col s12 m6">
        <a href="/verify/<%=tweets[1].id%>">
          <div class="card hoverable">
            <% if tweets[1].media_url %>
              <div class="card-image">
                <img id="right-tweet-img" src="<%=tweets[1].media_url%>">
              </div>
            <% end %>
            <div class="card-content">
            <p id="right-tweet">
              <%=tweets[1].content%>
            </p>
          </div>
          </div>
        </a>
      </div>
  </div>
</div>
</div>
